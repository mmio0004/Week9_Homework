{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Prevalence Rate of Hypertension in Men (30-79 years old) Globally - 2019",
    "color": "#092215",
    "fontSize": 18
  },
  "width": 800,
  "height": 400,
  "background": "#eef4ef",
  "data": {
    "url": "https://raw.githubusercontent.com/mmio0004/W9Homework/main/ne_110m_admin_0_countries.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 0.2
      },
      "encoding": {
        "tooltip": {"field": "note"}
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mmio0004/W9Homework/main/male-high-blood-pressure-2019-V5.csv"
            },
            "key": "Entity",
            "fields": ["Prevalence of hypertension among adults aged 30-79 years, age-standardized - Sex: male"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.2
      },
      "encoding": {
        "color": {
          "field": "Prevalence of hypertension among adults aged 30-79 years, age-standardized - Sex: male",
          "title": "Hypertension Prevalence Rate (%)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [20, 30, 40, 50, 60]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "Prevalence of hypertension among adults aged 30-79 years, age-standardized - Sex: male",
            "type": "quantitative",
            "title": "Hypertension Prevalence Rate (%)"
          }
        ]
      }
    }
  ]
}
